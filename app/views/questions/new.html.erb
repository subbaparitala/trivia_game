

<div class="container-fluid" style="background:#EDEDEE">
  <div class="container">
  <div class="row" style="margin-bottom:10px;margin-top:10px;">
    <div class="col-md-12">
    </div>
  </div>
  <!-- welcome content -->
  <div class="row">
    <div class="col-md-10 col-md-offset-1"> <!-- right panel -->
      <div class="panel panel-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1), 0 3px 10px 0 rgba(0, 0, 0, 0.1);">  
        <%= nested_form_for @question,url: user_questions_path do |f| %>
        <div class="panel-body" style="margin:40px 10px">
          <div class="col-md-10 question_new">
            <div class="form-group"><%=f.label "Category",class: "col-md-3"%>
              <div class="col-md-9"><%= select_tag "question[category_ids]", options_for_select(Category.all.collect{|p| [ p.title, p.id ] }), placeholder: "Please Select the Category", :multiple => true,:style => 'width: 100%',"data-required" => "true"
                  %>
              </div>
            </div>
            <%= render 'error_messages' %>
            <div class="form-group"><%=f.label :description,class: "col-md-3"%>
              <div class="col-md-9"><%= f.text_area :description, placeholder: "Please Enter Description of the Question", class: 'form-control'%></div>
            </div>
            <span>(Please select the correct answer on clicking option)</span>
            <div class="opt1">
              <ul>
            <%= f.fields_for :answer do |answer_form| %>
              <li>
                <%= f.radio_button :correct_answer, 1 %>
                <%=f.label :option1,class: 'col-md-3' ,for: 'question_correct_answer_1'%><%= answer_form.text_field :option1,class: 'col-md-8 form-control' %>
                <div class="check"></div>
              </li>
              <li>
                <%= f.radio_button :correct_answer, 2 %> 
                <%=f.label :option2,class: 'col-md-3',for: 'question_correct_answer_2'%><%= answer_form.text_field :option2,class: 'col-md-8 form-control' %>
                <div class="check"></div>
              </li>
              <li>
                <%= f.radio_button :correct_answer, 3 %> 
                <%=f.label :option3,class: 'col-md-3',for: 'question_correct_answer_3'%><%= answer_form.text_field :option3,class: 'col-md-8 form-control' %>
                <div class="check"></div>
              </li>
              <li>
                <%= f.radio_button :correct_answer, 4 %> 
                <%=f.label :option4,class: 'col-md-3',for: 'question_correct_answer_4'%><%= answer_form.text_field :option4 ,class: 'col-md-8 form-control'%>
                <div class="check"></div>
              </li>
              <li>
              </li>
              <%#= answer_form.link_to_remove "Remove this task" %>
              <%=f.submit "create",class: 'btn btn-primary pull-right'%>
              <% end %>
            </ul>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
.ques-desc{

}
.btn-div{
  padding-left :5px;
  padding-right :5px;
}
.btn-prev ,.btn-next
{
    width: 17%;
    float: right;
}
.question_new ul{
  margin:20px 0 0 70px;
}
.btn-div input[type="submit"]{
  margin-left:10px;
  margin-right:10px;
}
.opt1 input[type="text"]{width: 69%;}
.opt1 span{
  margin-right:20px;
  font-size: 16px;
}
.question_new ul li {
  color: #333;
  display: block;
  position: relative;
}
.question_new ul li input[type=radio] {
  float: left;
  visibility: hidden;
  width: 36px;
}
.question_new ul li label {
  display: block;
  position: relative;
  font-weight: 300;
  font-size:15px;
  padding: 0;
  margin: 0;
  height: 30px;
  z-index: 9;
  cursor: pointer;
}
.question_new ul li:hover label {
  color: #333;
}
.question_new ul li .check {
 display: block;
position: relative;
border: 3px solid #22b6b8;
border-radius: 100%;
height: 20px;
width: 20px;
margin-top: 34px;
left: 0px;
z-index: 5;
transition: border .25s linear;
-webkit-transition: border .25s linear;
}
.question_new ul li:hover .check {
  border: 3px solid #22b6b8;
}
 .question_new ul li .check::before {
 border-radius: 100%;
 content: "";
 display: block;
 height: 10px;
 left: 2px;
 margin: auto;
 position: absolute;
 top: 2px;
 transition: background 0.25s linear 0s;
 width: 10px;
}
 .question_new input[type=radio]:checked ~ .check {
 border: 3px solid #22b6b8;
}
 .question_new input[type=radio]:checked ~ .check::before {
 background: #22b6b8;
}
</style>

<script>
	$("#question_category_ids").select2();
</script>